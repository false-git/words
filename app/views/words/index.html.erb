<p id="notice"><%= notice %></p>

<h1>Words of <%= @wordset.name %></h1>

<%= @words.length %>words.

<table>
  <thead>
    <tr>
      <th>No.</th>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.index %></td>
        <td><%= simple_format(h(word.question)) %></td>
        <td><%= word.answer %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_wordset_word_path %>
<%= link_to 'Back', wordsets_path %>
