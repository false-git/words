<p id="notice"><%= notice %></p>

<h1>Wordsets</h1>

<table>
  <thead>
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wordsets.each do |wordset| %>
      <tr>
        <td><%= wordset.index %></td>
        <td><%= link_to wordset.name, wordset_words_path(wordset) %></td>
        <td><%= wordset.description %></td>
        <td><%= link_to 'Show', wordset %></td>
        <td><%= link_to 'Edit', edit_wordset_path(wordset) %></td>
        <td><%= link_to 'Destroy', wordset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wordset', new_wordset_path %><br/>
<%= link_to 'Back', root_path %>
